<html>
<head>
    <title>Stage 1</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>

<body>
<div class="container" style="margin-top: 30px">
    {{#error}} <!-- Only display if `error` is set -->
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {{/error}}

    <form class="form-horizontal" action="" method="post">
        <div class="form-group">
            <label for="password1" class="col-md-2 control-label">Password</label>

            <div class="col-md-10">
                <input type="password" class="form-control" id="password1" name="password1" placeholder="Password">
            </div>
        </div>

        <div class="form-group">
            <label for="password2" class="col-md-2 control-label">Password Again</label>

            <div class="col-md-10">
                <input type="password" class="form-control" id="password2" name="password2" placeholder="Password Again">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Next</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>